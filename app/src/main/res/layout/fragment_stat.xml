<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.estia.medicalapp.fragment.StatFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/sp_stat_fragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            />

        <FrameLayout
            android:id="@+id/stat_fragment"
            android:layout_below="@id/sp_stat_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="layout.OxyFragment"
            tools:layout="@layout/fragment_oxy">

        </FrameLayout>

    </RelativeLayout>
</FrameLayout>
