<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.estia.medicalapp.fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name        "
                android:background="@drawable/rectangle_border"/>
            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignEnd="@id/tv_name"
                android:layout_below="@id/tv_name"
                android:id="@+id/tv_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surname"
                android:background="@drawable/rectangle_border"/>
            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignEnd="@id/tv_name"
                android:layout_below="@id/tv_surname"
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:background="@drawable/rectangle_border"/>

            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignEnd="@id/tv_name"
                android:layout_below="@id/tv_age"
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:background="@drawable/rectangle_border"/>

            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_below="@id/tv_email"
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password "
                android:background="@drawable/rectangle_border"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_toRightOf="@id/layout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alessandro "
                android:background="@drawable/rectangle_border"/>
            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_name1"
                android:id="@+id/tv_surname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Di Stefano"
                android:background="@drawable/rectangle_border"/>
            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_surname1"
                android:id="@+id/tv_age1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26"
                android:background="@drawable/rectangle_border"/>

            <TextView
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_age1"
                android:id="@+id/tv_email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ale@hotmail.com"
                android:background="@drawable/rectangle_border"/>

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:layout_below="@id/tv_email1"
                android:id="@+id/tv_password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124y387 "
                android:background="@drawable/rectangle_border"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout1">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_connected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="You are connected with"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16dp"/>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <TextView
                android:background="@drawable/circle_button"
                android:layout_margin="10dp"
                android:layout_below="@id/tb_connected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marta Materazzi"
                android:textSize="22dp"
                android:padding="10dp"
                android:textColor="@android:color/white"/>


        </RelativeLayout>




    </RelativeLayout>



</FrameLayout>
